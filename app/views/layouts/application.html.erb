<!DOCTYPE html>
<html>
<head>
  <title>Alpha | <%= @title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="wrap">
  
  <header>
    <hgroup>
      <h1>Alpha</h1>
      <h2><%= @title %></h2>
    </hgroup>
    <nav>
      <%= render 'layouts/navigation' %>
    </nav>
  </header>

  <section>
    <% flash.each do |key, value| %>
      <div class="flash <%= key %>"><%= value %></div>
    <% end %>
    
    <%= yield %>

  </section>

  <aside>
    <%= render 'layouts/aside' %>
  </aside>

  <footer>
    <%= render 'layouts/footer' %>
  </footer>

</div>
</body>
</html>
